{
  "expo": {
    "name": "App",
    "slug": "App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.App.App" 
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": {
      "expo-image-picker": {
        "photoPermission": {
          "ios": "PHPhotoLibrary",
          "android": {
            "title": "Permiso de acceso a fotos",
            "message": "Necesitamos tu permiso para acceder a tus fotos",
            "buttonPositive": "Aceptar",
            "buttonNegative": "Cancelar"
          }
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
